" Leader
let mapleader = "\<Space>"
" Give cursor 7 lines
set scrolloff=7
" Show incremental search
set incsearch
" Ignore case when searching except when caps used
set ignorecase
set smartcase
" Echo commands
set showcmd
" Show current mode
set showmode

" ---------- Plugins ----------

set commentary
set surround
set NERDTree

" ---------- Mappings ----------

" Formatting
map Q gq
" Save
nnoremap <leader>w :w<cr>
" Paste
nnoremap <leader>p "+]p
" Visual copy
vnoremap <leader>y "+y
" Navigations similar to vim-unimpaired
map ]q <Action>(GotoNextError)
map [q <Action>(GotoPreviousError)
map ]c <Action>(VcsShowNextChangeMarker)
map [c <Action>(VcsShowPrevChangeMarker)
map ]m <Action>(MethodDown)
map [m <Action>(MethodUp)
" Other
map <leader>b <Action>(ToggleLineBreakpoint)
" Hovers
map gh <Action>(QuickJavaDoc)
map ge <Action>(ShowErrorDescription)
" Refactoring and such
map <leader>ln <Action>(RenameElement)
map <leader>lr <Action>(FindUsages)
map <leader>li <Action>(GotoImplementation)
